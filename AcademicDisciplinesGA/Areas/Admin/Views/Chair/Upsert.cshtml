@model AcademicDisciplinesGA.Areas.Admin.Models.ChairVM

<form method="post" asp-action="Upsert">
    <input asp-for="Chair.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Chair.Id!=0?"Update": "Create") Chair</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Chair.Title">Title</label>
            <input asp-for="Chair.Title" class="form-control" />
            <span asp-validation-for="Chair.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Chair.FacultyId"></label>
            <select asp-for="Chair.FacultyId" asp-items="@Model.FacultyList" class="form-select">
                <option disabled selected>--Select Faculty--</option>
            </select>
            <span asp-validation-for="Chair.FacultyId" class="text-danger"></span>
        </div>
        <div class="col-12">
            @if (Model.Chair.Id != 0)
            {
                <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
            }
            else
            {
                 <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
            }
            <a asp-controller="Chair" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}