@model IEnumerable<AcademicDisciplinesGA.Models.Course>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Course</a>
        </div>
    </div>
    <br />

    <table class="table table-info table-bordered table-striped">
        <thead class="text-center">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    ECTS
                </th>
                 <th>
                    Chair
                </th>
                 <th>
                    Teacher
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ECTS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chair.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.Name)
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i>  &nbsp; Edit</a>
                            <a onclick="Delete('/Admin/Course/Delete/@String.Format(item.Id.ToString())')"  class="btn btn-danger mx-2"> <i class="bi bi-trash3-fill"></i> &nbsp; Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/site.js"></script>
}