@model AcademicDisciplinesGA.Areas.User.Models.SurveyVM

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Опитування</h1>
            <form method="post" asp-action="Survey">
                <input asp-for="User.Id" hidden />
                <span asp-validation-for="User.Id" class="text-danger"></span>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Питання 1</h5>
                        <p class="card-text">Ви хочете поглиблювати навички в контексті вашої спеціальності чи опанувати нові?</p>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="ImproveExisting" value="true">
                                <label class="form-check-label" asp-for="ImproveExisting">
                                    Поглибити вже існуючі навички
                                </label>
                                 <span asp-validation-for="ImproveExisting" class="text-danger"></span>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="ImproveExisting" value="false">
                                <label class="form-check-label" asp-for="ImproveExisting">
                                    Опанувати нові
                                </label>
                                <span asp-validation-for="ImproveExisting" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Питання 2</h5>
                        <p class="card-text">Які напрямки та сфери зайнятості цікавлять вас найбільше?</p>
                        <div class="form-group">
                            <select asp-for="Chair.Id" asp-items="@Model.ChairList" class="form-select">
                                <option disabled selected>Виберіть напрямок</option>
                            </select>
                            <span asp-validation-for="Chair.Id" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Питання 3</h5>
                        <p class="card-text">Який викладач ваш улюблений?</p>
                        <select asp-for="Teacher.Id" asp-items="@Model.TeacherList" class="form-select">
                            <option disabled selected>Виберіть викладача</option>
                        </select>
                        <span asp-validation-for="Teacher.Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Відправити</button>
                </div>
            </form>
        </div>
    </div>
</div> 

